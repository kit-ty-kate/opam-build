 (package opam-test)
 (modules opam_test opam_test_config)
 (libraries build_test_common cmdliner))

(rule
 (target opam_test_config.ml)
 (action
  (with-stdout-to %{target}
   (progn
    (echo "let version = {|%{version:opam-test}|}\n")))))
